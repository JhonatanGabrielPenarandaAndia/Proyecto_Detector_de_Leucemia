<Window x:Class="Proyecto_Detector_de_Leucemia.Views.View_Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Detector_de_Leucemia.Views"
        xmlns:vm="clr-namespace:Proyecto_Detector_de_Leucemia.ViewModels"
        mc:Ignorable="d"
        Title="View_Main" Height="500" Width="800" MinWidth="800" MinHeight="500">
    <Window.Resources>
        <vm:ViewModel_Main x:Key="MainVM"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="3" Margin="40 10 10 10" CornerRadius="5">
            <Image/>
        </Border>
        <Border Grid.Column="1" Grid.RowSpan="2" BorderThickness="3" BorderBrush="Black" CornerRadius="5" Margin="0 10 10 20">
            
        </Border>
        <Border Grid.Row="1">
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Column="2" Grid.Row="1" Content="8"  >
                    </Button>
                    <Button Grid.Column="1" Grid.Row="2" >4</Button>
                    <Button Grid.Column="3" Grid.Row="2">6</Button>
                    <Button Grid.Column="2" Grid.Row="3" >2</Button>
                    <Button Width="auto" Grid.Row="1" Grid.Column="5">+</Button>
                    <Button Width="auto" Grid.Row="3" Grid.Column="5">-</Button>
                    <Button Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="5">Subir Imagen</Button>
                </Grid>

                <TabControl Grid.Column="1" HorizontalContentAlignment="Center" Margin="0">
                    <TabItem Header="Limpiar">

                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" Grid.Column="1" Margin="10">Limpiar Fondo</Button>
                            <Button Grid.Column="2" Grid.Row="1" Margin="10">Aclarar la imagen</Button>
                            <Label Grid.Row="0" Grid.Column="0" Content="Limpiar fondo:" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Ecualizar imagen:" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Extraer">
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Height="60" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Margin="10">Cortar Imagen</Button>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <Label Content="InicioX:"></Label>
                                <Label Content="InicioY:"></Label>
                                <Label Content="FinX:"></Label>
                                <Label Content="FinY:"></Label>
                            </StackPanel>

                        </Grid>
                    </TabItem>
                </TabControl>

            </Grid>
        </Border>
    </Grid>
</Window>
